<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/cas</item>
    </style>


    <style name="customToolBarActivity" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ScreenTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="WhiteControlsToolbar" parent="MyToolbar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="searchViewStyle">@style/WhiteSearchView</item>
        <item name="android:textColorHighlight">@color/white_transparent</item>
    </style>

    <style name="BigTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">Roboto-Bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textTitle</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FontLight" parent="TextAppearance.AppCompat.Title">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">Roboto-Light</item>
    </style>

    <style name="SubTitle" parent="BigTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SmallText" parent="SubTitle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SmallerText" parent="SmallText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Regular" parent="SubTitle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Links" parent="SmallerText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:color">@color/dark_blue</item>

    </style>

    <style name="RegularLight" parent="FontLight">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="WhiteSearchView" parent="Widget.AppCompat.Light.SearchView">
    </style>

    <style name="progress_bar_shape_style" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorAccent">@color/dark_sky_blue</item>
    </style>


    <declare-styleable name="RippleView">
        <attr name="pressed" format="reference"/>
        <attr name="normal" format="reference"/>
    </declare-styleable>

    <style name="RippleStyleGrey">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80808080</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#FFF</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

</resources>
