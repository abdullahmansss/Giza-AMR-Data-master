<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:padding="@dimen/activity_horizontal_margin"
                                   app:cardCornerRadius="6dp"
                                   android:layout_margin="4dp"
                                   android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">

        <ImageView android:layout_width="160dp"
                   android:id="@+id/imgDeviceImage1"
                   tools:src="@tools:sample/avatars"
                   android:scaleType="fitXY"
                   android:layout_height="160dp"/>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:padding="@dimen/activity_horizontal_margin"
                      android:layout_height="match_parent">

            <TextView android:layout_width="match_parent"
                      tools:text="@sample/numbers"
                      android:id="@+id/txtMeterId"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      tools:text="@sample/vendors"
                      android:textDirection="locale"
                      android:id="@+id/txtMeterVendor"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      tools:text="@sample/names"
                      android:textDirection="locale"
                      android:id="@+id/txtOwnerName"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      android:id="@+id/txtOwnerNumber"
                      tools:text="@tools:sample/us_phones"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      tools:text="@sample/ids"
                      android:id="@+id/txtOwnerId"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      android:id="@+id/txtAddress"
                      tools:text="@sample/addresses"
                      android:textDirection="locale"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>